<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#32EFEFEF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="17dp"
                android:layout_height="24dp"
                android:background="@mipmap/ic_login_phone" />

            <TextView
                android:id="@+id/tv_my_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.5dp"
                android:text="我的手机号:12312312312"
                android:textColor="@color/textColor"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="17dp"
            android:background="#32EFEFEF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="19dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_login_out"
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:background="@drawable/selector_buy"
                android:focusable="true"
                android:text="退出登录"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_check_update"
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/selector_buy"
                android:focusable="true"
                android:text="检测更新"
                android:textColor="@color/textColor"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="60dp"
        android:text="已更新到 V3.2.1"
        android:textColor="@color/textColor"
        android:textSize="17sp" />
</RelativeLayout>
