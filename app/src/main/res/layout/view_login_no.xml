<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_my_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:text="12312312312"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="13.5dp"
            android:background="#32EFEFEF" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_verification_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:background="@color/transparent"
                android:hint="验证码"
                android:textSize="18sp"
                android:inputType="number"
                android:textColor="@color/white"/>

            <View
                android:layout_toRightOf="@id/et_verification_code"
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:layout_marginLeft="232.5dp"
                android:background="#32EFEFEF" />

            <Button
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60秒"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="17dp"
            android:background="#32EFEFEF" />


        <Button
            android:id="@+id/btn_check_update"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24.5dp"
            android:background="@drawable/selector_buy"
            android:focusable="true"
            android:text="確認"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>
