<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#556791"
              android:clipChildren="false"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="45dp"
        android:clipChildren="false">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:background="@mipmap/logo_title"/>

        <TextView
            android:id="@+id/tv_title_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:text="22:22"
            android:textColor="@color/textColor"
            android:textSize="20sp"/>

        <View
            android:id="@+id/v_title_vertical_line"
            android:layout_width="1dp"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:layout_toLeftOf="@id/tv_title_time"
            android:background="@android:color/white"/>

        <ImageView
            android:id="@+id/iv_title_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:layout_toLeftOf="@id/v_title_vertical_line"
            android:background="@mipmap/buy_normal"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/iv_title_me_login"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:layout_toLeftOf="@id/iv_title_buy"
            android:background="@mipmap/me_login"
            android:focusable="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_title"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_menu_jx"
                style="@style/TextStyle"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:layout_marginTop="26dp"
                android:focusable="true"
                android:gravity="center"
                android:text="个人信息"/>

            <TextView
                android:id="@+id/tv_menu_zmgj"
                style="@style/TextStyle"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/menu_margin_17"
                android:focusable="true"
                android:gravity="center"
                android:text="订购信息"/>

            <TextView
                android:id="@+id/tv_menu_hylx"
                style="@style/TextStyle"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/menu_margin_17"
                android:focusable="true"
                android:gravity="center"
                android:text="观看记录"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="108dp"
                android:layout_height="27dp"
                android:layout_marginLeft="214dp"
                android:text="请绑定手机号"
                android:textColor="#CCEFEFEF"
                android:textSize="18sp"
                />

            <View
                android:layout_width="350dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="195dp"
                android:layout_marginTop="14dp"
                android:background="@color/bg_line"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_verification_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="214dp"
                    android:background="@color/transparent"
                    android:hint="验证码"
                    android:inputType="number"
                    android:textColor="@color/textColor"
                    android:textColorHint="#CCEFEFEF"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/v_vertical_ling"
                    android:layout_width="0.5dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/et_verification_code"
                    android:background="@color/bg_line"
                    />

                <Button
                    android:id="@+id/btn_get_verification_code"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@id/v_vertical_ling"
                    android:background="@color/transparent"
                    android:text="获取验证码"
                    android:textColor="#CCEFEFEF"
                    android:textSize="18sp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="350dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="195dp"
                android:background="@color/bg_line"/>

            <Button
                android:id="@+id/btn_login_out"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginLeft="195dp"
                android:layout_marginTop="25dp"
                android:background="#4DFFFFFF"
                android:text="确认"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
