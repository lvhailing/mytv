<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_title"
        layout="@layout/include_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_pay_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="60dp"
            android:paddingRight="27dp"
            android:paddingTop="10dp">

            <com.jbtm.parentschool.widget.PayTypeView
                android:id="@+id/v_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true" />

            <com.jbtm.parentschool.widget.PayTypeView
                android:id="@+id/v_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true" />

            <com.jbtm.parentschool.widget.PayTypeView
                android:id="@+id/v_dandian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_year_arrow"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:background="@mipmap/iv_arrow"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_month_arrow"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:background="@mipmap/iv_arrow"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_dandian_arrow"
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_dandian_arrow"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:background="@mipmap/iv_arrow"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="22dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="318dp"
                android:layout_height="356dp"
                android:background="@mipmap/qr_code_bg"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="28dp"
                    android:background="@mipmap/qr_code" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="11dp"
                    android:text="付款成功！"
                    android:textColor="#2C3130"
                    android:textSize="19sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_zfb"
                    android:focusable="true" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/selector_wx"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
