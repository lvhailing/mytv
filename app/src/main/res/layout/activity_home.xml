<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:clipChildren="false"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_title"
        layout="@layout/include_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_title"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_menu_jx"
                    style="@style/TextNormalStyle"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="26dp"
                    android:background="@drawable/selector_jingxuan"
                    android:focusable="true"
                    android:gravity="center"
                    android:tag="jx"
                    android:text="精选">

                    <requestFocus />
                </TextView>

                <TextView
                    android:id="@+id/tv_menu_1"
                    style="@style/TextNormalStyle"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/selector_jingxuan"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="正面管教"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_menu_2"
                    style="@style/TextNormalStyle"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/selector_jingxuan"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="婚姻两性"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_menu_3"
                    style="@style/TextNormalStyle"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/selector_jingxuan"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="注意力"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_menu_4"
                    style="@style/TextNormalStyle"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/selector_jingxuan"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="隔代教育"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_menu_5"
                    style="@style/TextNormalStyle"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/selector_jingxuan"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="其他"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="60dp"
            android:paddingTop="15dp">

            <RelativeLayout
                android:id="@+id/rl_jx_2items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/rl_jx_item_1"
                    layout="@layout/item_home"
                    android:layout_width="345dp"
                    android:layout_height="147dp"
                    android:layout_margin="0dp" />

                <include
                    android:id="@+id/rl_jx_item_2"
                    layout="@layout/item_home"
                    android:layout_width="345dp"
                    android:layout_height="147dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_margin="0dp" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:focusable="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
